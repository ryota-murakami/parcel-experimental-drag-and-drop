html, body, #root {
  width: 100%;
  height: 100%;
  margin: 0;
}

#root {
  display: flex;
  justify-content: center;
}

.container {
  width: 90%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-box {
  border: coral 1px solid;
  width: 300px;
  height: 600px;
}

.right-box {
  border: darkblue 1px solid;
  width: 300px;
  height: 600px;
}

.draggable-element {
  width: 200px;
  height: 200px;
}
